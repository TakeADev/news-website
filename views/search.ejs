<%- include('partials/header') %> 
<div class="container place-content-center flex mx-auto">
    <div class="flex justify-center align-middle w-1/3">
      <% if(pageNumber > 1 ){ %>
      <a href="/search/previouspage" class="p-2 rounded-full text-4xl"><span class="fa fa-solid fa-arrow-left hover:text-gray-500"></span></a>
      <% } %> 
    </div>
    
    <div class="flex justify-center w-1/3">
      <h1 class="font-bold text-xl md:text-3xl mb-8">Results for <%- searchTerm %>... Page <%- pageNumber %> of <%- numofPages %></h1>
    </div>
    

    <div class="flex justify-center w-1/3">
      <% if(pageNumber < numofPages ){ %>
        <a href="/search/nextpage" class="p-2 rounded-full text-4xl"><span class="fa fa-solid fa-arrow-right hover:text-gray-500"></span></a>
        <% } %> 
    </div>
  </div>
  <div class="container place-content-center flex flex-wrap mx-auto">
    <% for(let i=0; i < article.length; i++) {%>
    <a class="group basis-auto md:basis-1/2 lg:basis-1/3" href="<%- article[i].url %> ">
      <div
        class="mx-auto border-2 border-gray-400 border-opacity-20 bg-indigo-100 group-hover:bg-opacity-50 bg-opacity-20 rounded-lg mb-10 p-5">
        <img class=" object-contain mx-auto rounded-lg mb-5 block" src="<%- article[i].urlToImage %> "
          alt="<%- article[i].title %> " />
        <p class="w-auto flex-wrap inline-block text-lg font-bold mb-4 group-hover:text-gray-500">
          <%-article[i].title-%> 
        </p>
        <p class="flex-wrap inline-block group-hover:text-gray-500" href="">
          <%- article[i].content %>
        </p>
      </div>
    </a>
    <% } %>
    <div class="flex mb-10">
<% if(pageNumber > 1 ){ %>
      <a href="/search/previouspage" class="p-2 rounded-full text-4xl"><span class="fa fa-solid fa-arrow-left hover:text-gray-500"></span></a>
      <% } %> 
      <p class="mx-10 mt-2 text-xl font-bold">Page <%- pageNumber %> of <%- numofPages %> </p>
    <% if(pageNumber < numofPages ){ %>
      <a href="/search/nextpage" class="p-2 rounded-full text-4xl"><span class="fa fa-solid fa-arrow-right hover:text-gray-500"></span></a>
      <% } %> 
    </div>
    
  </div>
<%- include('partials/footer') %> 