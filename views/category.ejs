<%- include ('partials/header') %> 


  <div class="container place-content-center flex mx-auto">
    <h1 class="font-bold text-3xl mb-8"><%- category %> </h1>
  </div>
  <div class="container place-content-center flex flex-wrap mx-auto">
    <% for(let i=0; i < article.length; i++) {%>
    <a class="group basis-auto md:basis-1/2 lg:basis-1/3" href="<%- article[i].url %> ">
      <div
        class="mx-auto border-2 border-gray-400 border-opacity-20 bg-indigo-100 group-hover:bg-opacity-50 bg-opacity-20 rounded-lg mb-10 p-5">
        <img class="object-contain mx-auto rounded-lg mb-5 block" src="<%- article[i].urlToImage %> "
          alt="<%- article[i].title %> " />
        <p class="w-auto flex-wrap inline-block text-lg font-bold mb-4 group-hover:text-gray-500">
          <%-article[i].title-%>
        </p>
        <p class="flex-wrap inline-block group-hover:text-gray-500" href="">
          <%- article[i].content %>
        </p>
      </div>
    </a>
    <% } %>
  </div>


<%- include ('partials/footer') %> 